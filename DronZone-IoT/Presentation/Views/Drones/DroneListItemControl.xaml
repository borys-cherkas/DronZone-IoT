<Page
    x:Class="DronZone_IoT.Presentation.Views.Drones.DroneListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Width="250"
          Height="125"
          BorderBrush="CadetBlue" BorderThickness="2"
          Padding="15"
          Margin="0,10"
          Background="Bisque">

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Code: " FontWeight="Bold" FontSize="18" />
            <TextBlock Text="{Binding Code}" FontSize="22" TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</Page>